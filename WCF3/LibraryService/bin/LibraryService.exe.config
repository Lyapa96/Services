<?xml version="1.0" encoding="utf-8"?>

<configuration>
  <appSettings>
    <add key="aspnet:UseTaskFriendlySynchronizationContext" value="true" />
  </appSettings>
  <system.web>
    <compilation debug="true" targetFramework="4.6.1" />
    <httpRuntime targetFramework="4.6.1" />
  </system.web>
  <system.serviceModel>
    <behaviors>
      <serviceBehaviors>
        <behavior name="netTcp">
          <serviceMetadata httpGetEnabled="True" />
          <serviceDebug includeExceptionDetailInFaults="True" />
        </behavior>
      </serviceBehaviors>
    </behaviors>
    <services>
      <service name="LibraryService.LibraryService"
               behaviorConfiguration="netTcp">
        <endpoint binding="netTcpBinding"
                  address="wh"
                  bindingConfiguration="EndPointConfiguration"
                  contract="LibraryService.ILibraryService" />
        <host>
          <baseAddresses>
            <add baseAddress="net.tcp://localhost:9000/service" />
            <add baseAddress="http://localhost:8000/service" />
          </baseAddresses>
        </host>
      </service>
    </services>
    <bindings>
      <netTcpBinding>
        <binding name="EndPointConfiguration" sendTimeout="00:01:00">
          <security mode="None" />
          <reliableSession enabled="true" inactivityTimeout="00:15:00" />
        </binding>
      </netTcpBinding>
    </bindings>
  </system.serviceModel>
  <system.webServer>
    <modules runAllManagedModulesForAllRequests="true" />
    <!--
        Для просмотра корневого каталога веб-приложения во время отладки установите значение true.
        Перед развертыванием установите значение false, чтобы избежать раскрытия сведений в папке веб-приложения.
      -->
    <directoryBrowse enabled="true" />
  </system.webServer>

</configuration>